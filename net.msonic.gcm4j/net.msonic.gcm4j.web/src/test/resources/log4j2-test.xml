<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">

	<Appenders>
		<!--Console name="Console" target="SYSTEM_OUT"> <PatternLayout pattern="%d{YYYY-MM-dd 
			HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" /> </Console -->

		<!--RollingFile name="RollingFile" filename="./CrunchifyTest.log" filepattern="${logPath}/%d{YYYYMMddHHmmss}-fargo.log"> 
			<PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" 
			/> <Policies> <SizeBasedTriggeringPolicy size="100 MB" /> </Policies> <DefaultRolloverStrategy 
			max="20" /> </RollingFile -->

		<File name="A1" fileName="log.log" append="false">
			<PatternLayout pattern="%t %-5p %c{2} - %m%n" />
		</File>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>



	</Appenders>
	<Loggers>

		<Root level="DEBUG">
			<AppenderRef ref="A1" />
			<AppenderRef ref="STDOUT" />
		</Root>

		<Logger name="org.apache.log4j.xml" level="DEBUG">
			<AppenderRef ref="A1" />
			<AppenderRef ref="STDOUT" />
		</Logger>


		<logger name="log4j.logger.httpclient.wire" level="DEBUG">
			<AppenderRef ref="A1" />
			<AppenderRef ref="STDOUT" />
		</logger>

		<logger name="org.springframework" level="DEBUG">
			<AppenderRef ref="A1" />
			<AppenderRef ref="STDOUT" />
		</logger>

		<logger name="org.springframework.web.servlet" level="OFF" />
		<logger name="org.springframework.beans" level="OFF" />
		<logger name="org.springframework.core" level="OFF" />
		<logger name="org.springframework.context" level="OFF" />
		<logger name="org.springframework.ui" level="OFF" />
		<logger name="org.springframework.web.context" level="OFF" />
		<logger name="org.springframework.aop" level="OFF" />
		<logger name="org.springframework.cache" level="OFF" />
		<logger name="org.springframework.jndi" level="OFF" />

		<logger name="org.springframework.web.client.RestTemplate"
			level="DEBUG">
			<AppenderRef ref="A1" />
			<AppenderRef ref="STDOUT" />
		</logger>




	</Loggers>
</Configuration>