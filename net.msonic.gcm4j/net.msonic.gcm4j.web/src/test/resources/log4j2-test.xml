<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Appenders>


		<RollingFile name="A1" filePattern="./target/log-%d{yyyy-MM-dd}-%i.log"
			fileName="./target/log.log" append="true">
			<PatternLayout pattern="%d{YYYY-MM-dd HH:mm:ss} [%t] %-5p %c{1}:%L - %msg%n" />
			 <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100KB"/>
            </Policies>
            
			<DefaultRolloverStrategy max="20" />
		</RollingFile>

		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n" />
		</Console>



	</Appenders>
	<Loggers>

		<Root level="debug">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="A1" />

		</Root>

		
		<logger name="log4j.logger.httpclient.wire" level="debug">
			<appender-ref ref="A1" />
		</logger>
		
		<logger name="org.springframework" level="debug">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="A1" />
		</logger>
		<logger name="org.springframework.web.servlet" level="debug" />
		<logger name="org.springframework.beans" level="debug" />
		<logger name="org.springframework.core" level="debug" />
		<logger name="org.springframework.context" level="debug" />
		<logger name="org.springframework.ui" level="debug" />
		<logger name="org.springframework.web.context" level="debug" />
		<logger name="org.springframework.aop" level="debug" />
		<logger name="org.springframework.cache" level="debug" />
		<logger name="org.springframework.jndi" level="debug" />
		<logger name="org.springframework.web.client.RestTemplate" level="debug">
			<appender-ref ref="STDOUT" />
			<appender-ref ref="A1" />
		</logger>




	</Loggers>
</Configuration>